<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:orientation="vertical"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:gravity="center">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="5dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:textSize="30dp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:text="Registrarse"
            android:gravity="center_horizontal"
            android:layout_gravity="center_horizontal"/>
        <Space
            android:layout_width="match_parent"
            android:layout_height="40dip" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:id="@+id/inUserRegister"
            android:maxLength="40"
            android:textAlignment="center"
            android:hint="Usuario"
            android:gravity="center_horizontal" />
        <Space
            android:layout_width="match_parent"
            android:layout_height="5dip" />
        <EditText
            android:inputType="textPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:id="@+id/inPassRegister"
            android:maxLength="15"
            android:textAlignment="center"
            android:hint="ContraseÃ±a"
            android:gravity="center_horizontal" />
        <Space
            android:layout_width="match_parent"
            android:layout_height="5dip" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:id="@+id/inLastNameRegister"
            android:maxLength="20"
            android:textAlignment="center"
            android:hint="Apellido"
            android:gravity="center_horizontal" />
        <Space
            android:layout_width="match_parent"
            android:layout_height="5dip" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:id="@+id/inNameRegister"
            android:maxLength="20"
            android:textAlignment="center"
            android:hint="Nombre"
            android:gravity="center_horizontal" />
        <Space
            android:layout_width="match_parent"
            android:layout_height="5dip" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:id="@+id/inDNIRegister"
            android:maxLength="8"
            android:textAlignment="center"
            android:hint="DNI"
            android:gravity="center_horizontal" />
        <Space
            android:layout_width="match_parent"
            android:layout_height="5dip" />
        <Button
            android:text="Ingresar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="#007fb5"
            android:id="@+id/btnRegistrarse"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:gravity="center" />
        <Space
            android:layout_width="match_parent"
            android:layout_height="5dip" />
        <TextView
            android:text=""
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:id="@+id/lbl_msgReg"
            android:textAlignment="center"
            android:gravity="center_horizontal" />
    </LinearLayout>
</ScrollView>
</LinearLayout>